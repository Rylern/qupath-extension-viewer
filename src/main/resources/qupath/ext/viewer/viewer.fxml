<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<fx:root type="Stage" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <scene>
      <Scene fill="#7c7c7c">
          <Group fx:id="root">
            <children>
               <HBox>
                  <children>
                     <Slider fx:id="translationSlider" blockIncrement="0.1" max="1.0" />
                     <Slider blockIncrement="1.0" max="90.0" fx:id="xRotationSlider" />
                     <Slider fx:id="yRotationSlider" blockIncrement="1.0" max="90.0" />
                  </children>
               </HBox>
            </children></Group>
      </Scene>
   </scene>
</fx:root>
